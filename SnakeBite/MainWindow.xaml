<Window x:Class="SnakeBite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeBite"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <!-- 이미지 삽입 -->
        <Image Source="SnakeGame.jpg" Stretch="Fill"></Image>
        <TextBlock Margin="20, 20"> Snake Bite</TextBlock>
        <TextBlock Margin="20, 35"> Eat 25 Eggs Using Arrow Keys</TextBlock>
        <Button Content="Play" Name ="button1" Width="100" Height="40" HorizontalAlignment="Left" Margin="120, 200, 0, 0" FontSize="20" Click="button1_Click"/>
        <Button Content="Quit" Name="button2" Width="100" Height="40" HorizontalAlignment="Left" Margin="300, 200, 0, 0" FontSize="20" Click="button2_Click"/>
    </Grid>
</Window>
